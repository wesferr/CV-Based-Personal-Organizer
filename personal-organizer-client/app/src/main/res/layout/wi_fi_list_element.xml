<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/wifi_counter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/counter"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:text="0"></TextView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wifi_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ssid"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            tools:text="nome rede"></TextView>

        <TextView
            android:id="@+id/wifi_bssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bssid"
            android:textAlignment="viewStart"
            android:textSize="12sp"
            tools:text="00:00:00:00:00:00"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/wifi_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/level"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:text="-00"></TextView>
</LinearLayout>